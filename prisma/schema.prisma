model Support {
  id String @id @default(uuid())

  message   String
  requester String

  createdAt DateTime @default(now())
  active    Boolean  @default(true)

  @@map("supports")
}

model Student {
  id          String @id @default(uuid())
  firebase_id String @unique

  email     String
  // password  String
  photo_url String
  tenant_id String
  username  String

  @@index([id, firebase_id, email])
  @@map("students")
}

